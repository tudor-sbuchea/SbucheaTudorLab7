<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SbucheaTudorLab7.MainPage"
             Title="Home">

    <VerticalStackLayout Spacing="20" Padding="30" HorizontalOptions="Center">
        <!-- Imagine personalizată -->
        <Image Source="personal_image.png" 
               HeightRequest="150" 
               WidthRequest="150" 
               HorizontalOptions="Center" />

        <!-- Text personalizat -->
        <Label Text="Bun venit în aplicația mea personalizată!"
               FontSize="24"
               HorizontalOptions="Center" />

        <Label Text="Aceasta aplicație este dedicată organizării listei de cumpărături."
               FontSize="16"
               HorizontalOptions="Center"
               TextColor="Gray" />

        <!-- Buton pentru testare -->
        <Button x:Name="CounterBtn"
        Text="Click me"
        Clicked="OnCounterClicked"
        HorizontalOptions="Center"
        VerticalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>
